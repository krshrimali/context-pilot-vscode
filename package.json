{
    "name": "contextpilot",
    "displayName": "Context Pilot",
    "description": "Get the context right at your editor with a single command",
    "version": "1.8.0",
    "publisher": "tgkrs",
    "engines": {
        "vscode": "^1.79.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "contextpilot.showCommands",
                "title": "Show All Commands",
                "category": "ContextPilot"
            },
            {
                "command": "contextpilot.getContextFilesCurrentLineNumber",
                "title": "Get Context Files (Current Line)",
                "category": "ContextPilot"
            },
            {
                "command": "contextpilot.getContextFilesCurrentFile",
                "title": "Get Context Files (Current File)",
                "category": "ContextPilot"
            },
            {
                "command": "contextpilot.getContextFilesCurrentRange",
                "title": "Get Context Files (Selected Range)",
                "category": "ContextPilot"
            },
            {
                "command": "contextpilot.getContextDescriptions",
                "title": "Get Relevant Commits",
                "category": "ContextPilot"
            },
            {
                "command": "contextpilot.generateDiffsForCursorChat",
                "title": "Generate Diffs for Cursor Chat",
                "category": "ContextPilot"
            },
            {
                "command": "contextpilot.indexWorkspace",
                "title": "Index Workspace",
                "category": "ContextPilot"
            },
            {
                "command": "contextpilot.reindexChangedFiles",
                "title": "Re-index Changed Files",
                "category": "ContextPilot"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "submenu": "contextpilot.submenu",
                    "when": "editorTextFocus",
                    "group": "contextpilot"
                }
            ]
        },
        "submenus": [
            {
                "id": "contextpilot.submenu",
                "label": "ContextPilot"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "submenu": "contextpilot.submenu",
                    "when": "editorTextFocus",
                    "group": "contextpilot"
                }
            ],
            "contextpilot.submenu": [
                {
                    "command": "contextpilot.getContextFilesCurrentFile",
                    "when": "editorTextFocus && !editorHasSelection",
                    "group": "1_files"
                },
                {
                    "command": "contextpilot.getContextFilesCurrentRange",
                    "when": "editorTextFocus && editorHasSelection",
                    "group": "1_files"
                },
                {
                    "command": "contextpilot.getContextFilesCurrentLineNumber",
                    "when": "editorTextFocus",
                    "group": "1_files"
                },
                {
                    "command": "contextpilot.getContextDescriptions",
                    "when": "editorTextFocus",
                    "group": "2_commits"
                },
                {
                    "command": "contextpilot.generateDiffsForCursorChat",
                    "when": "editorTextFocus",
                    "group": "2_commits"
                },
                {
                    "command": "contextpilot.indexWorkspace",
                    "when": "editorTextFocus",
                    "group": "3_indexing"
                },
                {
                    "command": "contextpilot.showCommands",
                    "when": "editorTextFocus",
                    "group": "4_other"
                }
            ]
        },
        "configuration": {
            "title": "ContextPilot",
            "properties": {
                "contextpilot.openaiApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "OpenAI API Key for commit analysis"
                },
                "contextpilot.autoIndexOnGitCommit": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically trigger workspace indexing when a Git commit is made",
                    "scope": "resource"
                }
            }
        }
    },
    "extensionDependencies": [
        "GitHub.copilot",
        "GitHub.copilot-chat"
    ],
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "20.2.5",
        "@types/vscode": "^1.79.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/test-electron": "^2.3.2",
        "@vscode/vsce": "^3.4.0",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "ts-loader": "^9.4.3",
        "typescript": "^5.1.3",
        "webpack": "^5.98.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "child_process": "^1.0.2",
        "ignore": "^7.0.4",
        "vsce": "^2.15.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/krshrimali/context-pilot-vscode"
    },
    "license": "MIT",
    "author": "Kushashwa Ravi Shrimali <kushashwaravishrimali@gmail.com>",
    "icon": "extension/icon.png"
}